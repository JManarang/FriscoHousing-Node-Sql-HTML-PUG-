extends layout

block content
  include search
  #registerDisplay.container
    .row
      .box
        .col-lg-12
          h2.intro-text
            | Login
        .panel-body
          form(role='form', method='POST')
            .col-sm-6
              .form-group
                p#loginErrorMessage(style='color: red')= loginErrorMessage
                label(for='inputEmail')
                  | Email Address
                  sup *
                input#inputEmail.form-control(type='email', placeholder='you@example.org', name='email', autofocus='', required='', value=emailInput, maxlength'50')
              .form-group
                label(for='inputPassword1')
                  | Password
                  sup *
                input#inputPassword1.form-control(type='password', placeholder='********', name='password' required='')
              .col-lg-14
                button.btn.btn-success.pull-right(type='submit') Login
                p
                  | Don't have an account?
                  a(href='/fa17g14/register')  Create Account
                p
                  a(href='/fa17g14/register')  Forgot Password?
  // /.container

